{
  "manifest_version": 2,
  "name": "Curcuma",
  "version": "0.12.0",
  "description": "Enhance changelogs on googlesource.com .",
  "permissions": [
    "https://*.googlesource.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.googlesource.com/*"],
      "js": [
        "curcuma_utils.js",
        "curcuma_title.js",
        "curcuma_preview.js"
      ],
      "css": [
        "curcuma_preview.css"
      ]
    },
    {
      "matches": ["https://chromium.googlesource.com/*"],
      "js": [
        "curcuma_autolink.js"
      ]
    }
  ]
}
